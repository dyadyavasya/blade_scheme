<idea-plugin>
  <id>com.dmitryshamin.blade</id>
  <name>Blade Color Scheme</name>
  <version>1.0.5</version>
  <vendor email="dmitry.shamin@gmail.com" url="https://github.com/dyadyavasya/blade_scheme">Dmitry Shamin</vendor>

  <description><![CDATA[
      Blade is the dark color scheme for the PHPStorm IDE.
    ]]></description>

  <change-notes><![CDATA[
      Changed background color for Completion hints
    ]]>
  </change-notes>

  <idea-version since-build="142.0"/>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <bundledColorScheme path="/colors/Blade"/>
  </extensions>
</idea-plugin>