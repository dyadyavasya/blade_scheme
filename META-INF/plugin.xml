<idea-plugin>
  <id>color.scheme.Blade</id>
  <name>Blade Color Scheme</name>
  <version>1.0.8</version>
  <vendor email="dmitry.shamin@gmail.com" url="http://github.com/dyadyavasya/blade_theme">Dmitry Shamin</vendor>

  <description><![CDATA[
      Blade is the dark color scheme for the PHPStorm and other JetBrains's IDE
    ]]></description>

  <change-notes><![CDATA[
      Fixed system error for PHPStorm 2023.3.1
    ]]>
  </change-notes>

  <idea-version since-build="142.0"/>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <bundledColorScheme path="/colors/Blade"/>
  </extensions>
</idea-plugin>